public class Penta extends Flake {
	public void draw(Turtle turtle,int n,double size) {
		this.turtle = turtle;
		turtle.turnTo(180.0);
		// Draw a penta structure of five fractals
		for(int i = 0; i <= 4; i++) {
			turtle.turn(72.0);
			drawSide(n,size);
		}
	}

	private void drawSide(int n,double size) {
		if ( n <= 0 )
			turtle.walk(size);
		else {
			double l = size/5.0;
			for(int i = 0; i <= 5; i++) {
				drawSide(n-1,l);
				turtle.turn(72.0);
			}
		}
	}
}
